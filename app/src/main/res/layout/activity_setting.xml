<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="300dp"
    android:layout_height="430dp"
    android:background="#112945"
    android:orientation="vertical"
    tools:context="com.nandi.disastermanager.SettingActivity">

    <LinearLayout
        android:id="@+id/userMessage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp"
        android:visibility="visible">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="账户信息"
                android:textColor="#00f3f3"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/rl_back_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:src="@drawable/cancel" />
        </RelativeLayout>

        <!-- 账户名及所在地 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:background="#88b2b2b2"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:layout_weight="1"
                    android:gravity="left|center"
                    android:drawableLeft="@drawable/icon_account"
                    android:drawablePadding="6dp"
                    android:text="账户名"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/userName"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:layout_weight="1"
                    android:gravity="right|center"
                    android:text="张三"
                    android:textColor="@color/white" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/button_color_gz_gray" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:layout_weight="1"
                    android:gravity="left|center"
                    android:drawableLeft="@drawable/icon_area"
                    android:drawablePadding="6dp"
                    android:text="所在地"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/userLevel"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:layout_weight="1"
                    android:gravity="right|center"
                    android:text="重庆"
                    android:textColor="@color/white" />

            </LinearLayout>

        </LinearLayout>


        <!-- 下载更新、修改密码 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:background="#88b2b2b2"
            android:orientation="vertical">

            <TextView
                android:id="@+id/download"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:gravity="left|center"
                android:drawableLeft="@drawable/icon_download"
                android:drawablePadding="6dp"
                android:drawableRight="@drawable/arrowright"
                android:text="下载更新"
                android:textColor="@color/white" />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/button_color_gz_gray" />

            <TextView
                android:id="@+id/changePassword"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:gravity="left|center"
                android:drawableLeft="@drawable/icon_pwd"
                android:drawablePadding="6dp"
                android:drawableRight="@drawable/arrowright"
                android:text="修改密码"
                android:textColor="@color/white" />
        </LinearLayout>

        <!-- 移动网络下更新数据 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:background="#88b2b2b2"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="44dp"
                android:layout_weight="2.5"
                android:gravity="left|center"
                android:text="移动网络下更新数据"
                android:textColor="@color/white"/>

            <ToggleButton
                android:id="@+id/toggle_btn"
                android:layout_width="wrap_content"
                android:layout_height="44dp"
                android:layout_gravity="right|center"
                android:background="@android:color/transparent"
                android:button="@drawable/switch_btn"
                android:text=""
                android:textOff=""
                android:textOn=""
                android:checked="true"
                android:minWidth="25dp"/>
        </LinearLayout>

        <!-- 注销登录 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginTop="15dp"
            android:background="#88b2b2b2"
            android:gravity="center">

            <TextView
                android:id="@+id/logOut"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="注销登录"
                android:textColor="#FA8089"
                android:textSize="16sp" />
        </LinearLayout>

    </LinearLayout>

    <!-- 下载更新里面的内容 -->
    <LinearLayout
        android:id="@+id/ll_download"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="vertical"
        android:visibility="gone">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/rl_back_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:src="@drawable/icon_back" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:text="下载更新"
                android:textColor="#00f3f3"
                android:textSize="20sp" />
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="下载"
            android:textColor="#fff"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#55b2b2b2"
            android:layout_marginTop="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/downloadMap"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:gravity="left|center"
                android:drawableRight="@drawable/arrowright"
                android:text="离线地图"
                android:textColor="@color/white"
                android:textSize="16sp" />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/button_color_gz_gray" />

            <TextView
                android:id="@+id/downloadApp"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:gravity="left|center"
                android:drawableRight="@drawable/arrowright"
                android:text="最新版本APP"
                android:textColor="@color/white"
                android:textSize="16sp" />

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="更新"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#55b2b2b2"
            android:layout_marginTop="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/downloadDisater"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:gravity="left|center"
                android:drawableRight="@drawable/arrowright"
                android:text="最新灾害点"
                android:textColor="@color/white"
                android:textSize="16sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/button_color_gz_gray" />

            <TextView
                android:id="@+id/downloadMonitor"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:gravity="left|center"
                android:drawableRight="@drawable/arrowright"
                android:text="最新监测点信息"
                android:textColor="@color/white"
                android:textSize="16sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/button_color_gz_gray" />

            <TextView
                android:id="@+id/downloadMonDate"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:gravity="left|center"
                android:drawableRight="@drawable/arrowright"
                android:text="最新监测点数据"
                android:textColor="@color/white"
                android:textSize="16sp" />

        </LinearLayout>

        <TextView
            android:id="@+id/message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:text="更新信息展示"
            android:textColor="@color/white"
            android:textSize="16sp" />
    </LinearLayout>

    <!-- 修改密码里面的内容 -->
    <LinearLayout
        android:id="@+id/ll_change_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp"
        android:visibility="gone">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/rl_back_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:src="@drawable/icon_back" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_centerVertical="true"
                android:text="修改密码"
                android:textColor="#00f3f3"
                android:textSize="20sp" />
        </RelativeLayout>

        <EditText
            android:id="@+id/et_userName"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginTop="30dp"
            android:paddingLeft="10dp"
            android:background="#55b2b2b2"
            android:drawableLeft="@drawable/username"
            android:drawablePadding="16dp"
            android:hint="账户名"
            android:textColor="#fff"
            android:inputType="text" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:layout_marginTop="15dp"
            android:background="#55b2b2b2"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/et_password"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:paddingLeft="10dp"
                android:drawableLeft="@drawable/pswd"
                android:drawablePadding="16dp"
                android:background="@null"
                android:hint="原密码"
                android:textColorHint="#b3b3b3"
                android:textColor="#fff"
                android:inputType="textPassword" />

            <ImageView
                android:id="@+id/showeyes_btn1"
                android:visibility="gone"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@mipmap/ic_uneye"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:layout_marginTop="15dp"
            android:background="#55b2b2b2"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/et_new_password"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:paddingLeft="10dp"
                android:background="@null"
                android:drawableLeft="@drawable/padlock"
                android:drawablePadding="12dp"
                android:hint="新密码"
                android:textColorHint="#b3b3b3"
                android:textColor="#fff"
                android:inputType="textPassword" />

            <ImageView
                android:id="@+id/showeyes_btn2"
                android:visibility="gone"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@mipmap/ic_uneye"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:layout_marginTop="15dp"
            android:background="#55b2b2b2"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/et_new_password1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:paddingLeft="10dp"
                android:background="@null"
                android:drawableLeft="@drawable/padlock"
                android:drawablePadding="12dp"
                android:hint="确认新密码"
                android:textColorHint="#b3b3b3"
                android:textColor="#fff"
                android:inputType="textPassword" />

            <ImageView
                android:id="@+id/showeyes_btn3"
                android:visibility="gone"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@mipmap/ic_uneye"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginTop="28dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/changeStop"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:padding="5dp"
                android:layout_marginRight="12dp"
                android:background="@drawable/setting_btn"
                android:gravity="center"
                android:text="取消"
                android:textColor="#FA8089"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/changeSure"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:padding="5dp"
                android:background="@drawable/setting_btn"
                android:gravity="center"
                android:text="确定"
                android:textColor="@color/white"
                android:textSize="20sp" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
