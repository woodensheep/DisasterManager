<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="300dp"
    android:layout_height="450dp"
    android:background="@drawable/linlear_background"
    android:orientation="vertical"

    tools:context="com.nandi.disastermanager.SettingActivity">

    <LinearLayout
        android:id="@+id/userMessage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/rl_back_1"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="7dp"
                android:src="@mipmap/backward" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="44dp"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:text="账户信息"
                android:textColor="#00f3f3"
                android:textSize="20sp" />
        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#4c4c4c"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="账户名："

                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/userName"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:layout_weight="5"
                    android:gravity="center"
                    android:text="张三"
                    android:textColor="@color/white" />
            </LinearLayout>

            <View
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:background="@color/button_color_gz_gray" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="账户名："
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/userLevel"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:layout_weight="5"
                    android:gravity="center"
                    android:text="张三"
                    android:textColor="@color/white" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/button_color_gz_gray" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="#4c4c4c"
            android:gravity="center">

            <TextView
                android:id="@+id/download"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:background="@drawable/setting_btn"
                android:gravity="center"
                android:text="下载更新"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/changePassword"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:background="@drawable/setting_btn"
                android:gravity="center"
                android:text="修改密码"
                android:textColor="@color/white" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/button_color_gz_gray" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="#4c4c4c"
            android:gravity="center">

            <TextView
                android:id="@+id/logOut"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:background="@drawable/setting_btn"
                android:gravity="center"
                android:text="注销登录"
                android:textColor="@color/white"
                android:textSize="16sp" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_download"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp"
        android:visibility="gone">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/rl_back_2"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="7dp"
                android:src="@mipmap/backward" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="44dp"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:text="下载更新"
                android:textColor="#00f3f3"
                android:textSize="20sp" />
        </RelativeLayout>


        <TextView
            android:id="@+id/downloadMap"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#4c4c4c"
            android:gravity="center"
            android:text="下载离线地图"
            android:textColor="@color/white"
            android:textSize="16sp" />
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/button_color_gz_gray" />

        <TextView
            android:id="@+id/downloadApp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#4c4c4c"
            android:gravity="center"
            android:text="下载最新版本APP"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/button_color_gz_gray" />


        <TextView
            android:id="@+id/downloadDisater"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#4c4c4c"
            android:gravity="center"
            android:text="更新最新灾害点"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/button_color_gz_gray" />

        <TextView
            android:id="@+id/downloadMonitor"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#4c4c4c"
            android:gravity="center"
            android:text="更新最新监测点信息"
            android:textColor="@color/white"
            android:textSize="16sp" />


        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/button_color_gz_gray" />

        <TextView
            android:id="@+id/downloadMonDate"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#4c4c4c"
            android:gravity="center"
            android:text="更新最新监测点点数据"
            android:textColor="@color/white"
            android:textSize="16sp" />



        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/button_color_gz_gray" />

        <TextView
            android:id="@+id/message"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="20dp"
            android:background="#b2b2b2"
            android:gravity="center"
            android:text="更新信息展示"
            android:textColor="@color/white"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_change_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:visibility="gone">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/rl_back_3"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="7dp"
                android:src="@mipmap/backward" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="44dp"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:text="修改密码"
                android:textColor="#00f3f3"
                android:textSize="20sp" />
        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="#4c4c4c"
            android:gravity="left|center_vertical"
            android:paddingLeft="30dp"
            android:text="账户名："
            android:textColor="@color/white" />

        <EditText
            android:id="@+id/et_userName"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="#b2b2b2"
            android:hint="请输入账户名"
            android:inputType="text"
            android:paddingLeft="30dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="#4c4c4c"
            android:gravity="left|center_vertical"
            android:paddingLeft="30dp"
            android:text="原密码："
            android:textColor="@color/white" />

        <EditText
            android:id="@+id/et_password"

            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="#b2b2b2"
            android:hint="请输入原密码"
            android:inputType="textPassword"
            android:paddingLeft="30dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="#4c4c4c"
            android:gravity="left|center_vertical"
            android:paddingLeft="30dp"
            android:text="新密码："
            android:textColor="@color/white" />

        <EditText
            android:id="@+id/et_new_password"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="#b2b2b2"
            android:hint="请输入新密码"
            android:inputType="textPassword"
            android:paddingLeft="30dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="#4c4c4c"
            android:gravity="left|center_vertical"
            android:paddingLeft="30dp"
            android:text="再次输入新密码："
            android:textColor="@color/white" />

        <EditText
            android:id="@+id/et_new_password1"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="#b2b2b2"
            android:hint="请再次输入新密码"
            android:inputType="textPassword"
            android:paddingLeft="30dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="#4c4c4c">

            <TextView
                android:id="@+id/changeSure"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:background="@drawable/setting_btn"
                android:gravity="center"
                android:text="确定"
                android:textColor="@color/white"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/changeStop"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:background="@drawable/setting_btn"
                android:gravity="center"
                android:text="取消"
                android:textColor="@color/white"
                android:textSize="16sp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
