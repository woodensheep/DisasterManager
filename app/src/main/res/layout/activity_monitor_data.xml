<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="800dp"
    android:layout_height="wrap_content"
    android:padding="5dp"
    android:layout_gravity="center"
    android:gravity="center"
     android:orientation="vertical"
    android:background="@drawable/linlear_background"
    tools:context="com.nandi.disastermanager.search.MonitorDataActivity">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <TextView
        android:id="@+id/data_monitor"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="44dp"
        android:text="监测数据"
        android:textSize="20sp"
        android:gravity="center"
        android:textColor="@color/white"
        android:background="@color/colorPrimary"
        />
    <TextView
        android:id="@+id/data_curve"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="44dp"
        android:text="数据曲线"
        android:textSize="20sp"
        android:gravity="center"
        android:textColor="@color/trans_dark_grey"
        android:background="@color/colorPrimary"
        />
</LinearLayout>
    <LinearLayout
        android:background="@color/white"
        android:id="@+id/monitor_data1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:layout_margin="3dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_margin="3dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_monitor_1"
            android:layout_weight="4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="14sp"
            android:text="监测点编号" />

        <View
            android:layout_width="1dp"
            android:background="@color/button_color_gz_gray"
            android:layout_height="45dp"/>

        <TextView
            android:textColor="@color/button_color_gz_dark"
            android:layout_weight="2.5"
            android:id="@+id/tv_monitor_2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="14sp"
            android:text="监测点名称" />

        <View
            android:layout_width="1dp"
            android:background="@color/button_color_gz_gray"
            android:layout_height="45dp"/>

        <TextView
            android:textColor="@color/button_color_gz_dark"
            android:layout_weight="2.5"
            android:id="@+id/tv_monitor_3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="14sp"
            android:text="监测时间" />
        <View
            android:layout_width="1dp"
            android:background="@color/button_color_gz_gray"
            android:layout_height="45dp"/>
        <TextView
            android:id="@+id/tv_monitor_5"
            android:layout_weight="2.5"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="14sp"
            android:text="实测数据" />


        <View
            android:layout_width="1dp"
            android:background="@color/button_color_gz_gray"
            android:layout_height="45dp"/>

        <TextView
            android:textColor="@color/button_color_gz_dark"
            android:layout_weight="2.5"
            android:id="@+id/tv_monitor_8"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="14sp"
            android:layout_marginRight="10dp"
            android:text="查看图片" />


        <TextView
            android:textColor="@color/button_color_gz_dark"
            android:layout_weight="2.5"
            android:id="@+id/tv_monitor_9"
            android:layout_marginLeft="10dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="14sp"
            android:text="查看上报" />
    </LinearLayout>
        <View
            android:id="@+id/view_line"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_width="match_parent"
            android:background="@color/button_color_gz_dark"
            android:layout_height="1dp"/>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/date_show"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </android.support.v7.widget.RecyclerView>
    </LinearLayout>
    <LinearLayout
        android:visibility="gone"
        android:background="@color/white"
        android:id="@+id/ll_chart"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="开始时间："
                android:gravity="center"
                android:layout_height="wrap_content" />

            <TextView
                android:padding="4dp"
                android:id="@+id/tv_chart_start_time"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text=""
                android:background="@drawable/shape_search_gz_item_btn"
                android:gravity="center"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="结束时间："
                android:gravity="center"
                android:layout_height="wrap_content" />
            <TextView
                android:padding="4dp"
                android:id="@+id/tv_chart_end_time"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text=""
                android:background="@drawable/shape_search_gz_item_btn"
                android:gravity="center"
                android:layout_height="wrap_content" />

            <Button
                android:background="@drawable/linlear_background"
                android:textColor="@color/white"
                android:paddingTop="0dp"
                android:paddingBottom="0dp"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="3dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="10dp"
                android:id="@+id/btn_chart"
                android:layout_width="wrap_content"
                android:text="查询"
                android:gravity="center"
                android:layout_height="wrap_content" />

        </LinearLayout>


        <com.github.mikephil.charting.charts.LineChart
            android:id="@+id/chart"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            />
    </LinearLayout>
</LinearLayout>
