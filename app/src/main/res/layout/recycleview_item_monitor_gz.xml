<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/color_white"
   >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_margin="3dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_monitor_1"
            android:layout_weight="4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="14sp"
            android:text="监测点编号" />

        <View
            android:layout_width="1dp"
            android:background="@color/button_color_gz_gray"
            android:layout_height="45dp"/>

        <TextView
            android:textColor="@color/button_color_gz_dark"
            android:layout_weight="4"
            android:id="@+id/tv_monitor_2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="14sp"
            android:text="监测点名称" />

        <View
            android:layout_width="1dp"
            android:background="@color/button_color_gz_gray"
            android:layout_height="45dp"/>

        <TextView
            android:textColor="@color/button_color_gz_dark"
            android:layout_weight="4"
            android:id="@+id/tv_monitor_3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="14sp"
            android:text="监测时间" />
        <View
            android:layout_width="1dp"
            android:background="@color/button_color_gz_gray"
            android:layout_height="45dp"/>
        <TextView
            android:id="@+id/tv_monitor_5"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="14sp"
            android:text="实测数据" />




        <TextView
            android:textColor="@color/button_color_gz_dark"
            android:layout_weight="3"
            android:id="@+id/tv_monitor_8"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="14sp"
            android:background="@drawable/shape_search_gz_item_btn"
            android:paddingLeft="21dp"
            android:layout_marginRight="10dp"
            android:text="查看图片" />
    </LinearLayout>


</LinearLayout>
