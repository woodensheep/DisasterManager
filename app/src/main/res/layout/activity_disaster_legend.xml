<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="20dp"
    android:layout_marginRight="10dp">

    <LinearLayout
        android:layout_width="150dp"
        android:layout_height="200dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:alpha="0.9"
        android:background="@drawable/shape_ll_background"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="@drawable/shape_ll_background1">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="隐患点图例"
                android:textColor="@color/color_title"
                android:textSize="18sp" />

        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/ll_legend_1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="@dimen/margin_neirong"
                android:layout_weight="1"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:padding="2dp"
                    android:src="@mipmap/point_1" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:paddingLeft="7dp"
                    android:text="滑坡"
                    android:textColor="@color/color_neirong"
                    android:textSize="@dimen/leirong_text_size" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_legend_2"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="@dimen/margin_neirong"
                android:layout_weight="1"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:padding="2dp"
                    android:src="@mipmap/point_2" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:paddingLeft="7dp"
                    android:text="泥石流"
                    android:textColor="@color/color_neirong"
                    android:textSize="@dimen/leirong_text_size" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_legend_3"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="@dimen/margin_neirong"
                android:layout_weight="1"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:padding="2dp"
                    android:src="@mipmap/point_3" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="7dp"
                    android:layout_gravity="center_vertical"
                    android:text="危岩"
                    android:textColor="@color/color_neirong"
                    android:textSize="@dimen/leirong_text_size" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_legend_4"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="@dimen/margin_neirong"
                android:layout_weight="1"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:padding="2dp"
                    android:src="@mipmap/point_4" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="7dp"
                    android:layout_gravity="center_vertical"
                    android:text="不稳定斜坡"
                    android:textColor="@color/color_neirong"
                    android:textSize="@dimen/leirong_text_size" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_legend_5"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="@dimen/margin_neirong"
                android:layout_weight="1"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:padding="2dp"
                    android:src="@mipmap/point_5" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="7dp"
                    android:layout_gravity="center_vertical"
                    android:text="地面坍塌"
                    android:textColor="@color/color_neirong"
                    android:textSize="@dimen/leirong_text_size" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_legend_6"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="@dimen/margin_neirong"
                android:layout_weight="1"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:padding="2dp"
                    android:src="@mipmap/point_6" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="7dp"
                    android:layout_gravity="center_vertical"
                    android:text="地裂缝"
                    android:textColor="@color/color_neirong"
                    android:textSize="@dimen/leirong_text_size" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_legend_7"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="@dimen/margin_neirong"
                android:layout_weight="1"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:padding="2dp"
                    android:src="@mipmap/point_7" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="7dp"
                    android:layout_gravity="center_vertical"
                    android:text="库岸"
                    android:textColor="@color/color_neirong"
                    android:textSize="@dimen/leirong_text_size" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
